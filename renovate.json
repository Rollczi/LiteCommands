{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "dependencyDashboard": true,
  "ignorePaths": [],
  "lockFileMaintenance": {
    "enabled": false
  },
  "automerge": true,
  "pruneStaleBranches": true,
  "commitMessagePrefix": "dependency:",
  "packageRules": [
    {
      "groupName": "fabricmc",
      "matchPackagePatterns": [
        "net.fabricmc*",
        "fabric-loom*"
      ],
      "automerge": false
    },
    {
      "groupName": "spigotmc",
      "matchPackagePatterns": [
        "org.spigotmc*"
      ],
      "allowedVersions": "/^\\d+\\.\\d+(\\.\\d+)?-R\\d+\\.\\d+-SNAPSHOT$/",
      "automerge": false
    }
  ]
}
